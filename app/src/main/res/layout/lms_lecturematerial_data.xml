<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/lecture_material_item_root"
    android:background="@drawable/round_rectangle"
    android:padding="10dp">

    <ImageView
        android:id="@+id/lecture_material_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/circle">
    </ImageView>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/lecture_material_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lecture_material_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="sub Title"
            android:textSize="10sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:padding="2dp">

        <ImageView
            android:id="@+id/lecture_material_item_ischecked"
            android:src="@drawable/lecturematerial_dischecked_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </LinearLayout>

</LinearLayout>