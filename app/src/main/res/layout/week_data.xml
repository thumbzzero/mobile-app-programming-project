<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_rectangle"
    android:padding="10dp"
    android:layout_marginHorizontal="1dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/data"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/week_site"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="사이트이름" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/week_date"
            android:textSize="15sp"
            android:textColor="#444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="날짜" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/notice_star_off" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="3dp">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_rectangle">

            <ImageView
                android:id="@+id/site_img"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_dialog_info" />
        </FrameLayout>

        <TextView
            android:id="@+id/week_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:maxLines="3"
            android:textSize="15sp"
            android:textColor="#444"
            android:text="제목" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/site_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/site_view_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/notice_views" />
        <TextView
            android:id="@+id/week_view"
            android:textSize="15sp"
            android:textColor="#444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="조회수" />
    </LinearLayout>
    <ImageView
        android:id="@+id/site_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/unfold"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />
</LinearLayout>