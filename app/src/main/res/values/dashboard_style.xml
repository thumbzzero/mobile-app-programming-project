<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dashboard_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/knu_gray</item>

        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="background">@drawable/round_rectangle</item>
    </style>
    <style name="dashboard_course_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_rectangle</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="dashboard_course_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="dashboard_course_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:text">과목 홈 바로가기 →</item>
        <item name="android:backgroundTint">@color/knu_lightgray</item>
    </style>
    <style name="lms_notice_txt">
        <item name = "android:textSize">14sp</item>
        <item name = "android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="dashboard_menu_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_rectangle</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>